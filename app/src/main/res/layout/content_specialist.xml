<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.trainingandroidpart1.physicianregistration.SpecialistActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:background="@drawable/bg_actsplash"
        android:orientation="vertical"
        android:weightSum="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chuyên môn"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_weight="1.08" />
        <SearchView
            android:id="@+id/searchview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@drawable/bg_searchview"
            android:focusable="false"
            android:focusableInTouchMode="false"



            android:iconifiedByDefault="false"
            android:queryBackground="@null"
            android:queryHint="Tìm kiếm"/>
    </LinearLayout>


    <me.yokeyword.indexablelistview.IndexableStickyListView
        android:id="@+id/indexListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/white"
        app:indexListView_type_overlay="center"
        app:indexBar_textColor="@color/colorPrimaryDark"
        app:indexListView_rightOverlayColor="#7B1FA2"
        app:indexBar_selected_textColor="@android:color/black"
        android:layout_weight="1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiếp tục"
        android:onClick="next_to_language_activity"
        android:textColor="@android:color/white"
        android:background="#3846b5"
        android:textAllCaps="false"/>
</LinearLayout>